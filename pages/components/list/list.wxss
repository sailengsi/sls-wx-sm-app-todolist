Page{
    background: #f9f9f9;
}
.cate-list{
    width:100%;
    padding-top: 10px;
}
.cate-li-scroll{
    width:100%;
    height: 44px;
    white-space:nowrap;
    position: relative;
    margin-bottom: 4px;
}
.scroll-item{
    display: inline-block;
    height: 44px;
}
.cate-li{
    width:100%;
    border-radius: 5px;
    line-height: 44px;
    padding: 0px 10px;
    position: relative;
    box-sizing: border-box;
}
.cate-li-text{
    width:100%;
    height: 44px;
    display: inline-block;
    background: #FFF;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 14px;
    padding: 0px 26px 0px 10px;
    box-sizing: border-box;
}
.action-img{
    position: absolute;
    right:14px;
    top:12px;
    width:20px;
    height: 20px;
    box-sizing: border-box;
}
.cate-li-text.finished{
    color:#ccc;
}
.cate-li-action{
    display: inline-block;
    position: relative;
    background: red;
    position: absolute;
    top: 0px;
    right:-128px;
    color:#FFF;
    font-size: 13px;
}
.action-item{
    display: inline-block;
    height: 44px;
    line-height: 44px;
    text-align: center;
}
.action-finish{
    width:80px;
    background: #CCC;
}
.action-delete{
    width:50px;
    background: red;
}


.sort-content{
    width: 100%;
    height: 36px;
    background: #FFF;
    border-bottom: 1px solid #ddd;
}
.sort-item{
    width:49%;
    height: 100%;
    float: left;
    font-size: 14px;
    text-align: center;
    line-height: 36px;
    color:#0ebf5a;
}
.sort-status{
    border-right: 1px solid #ddd;
}
.sort-content image{
    width:20px;
    height: 20px;
    position: relative;
    top: 4px;
    left:4px;
}
